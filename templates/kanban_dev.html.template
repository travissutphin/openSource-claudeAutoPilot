    <script>
        // Toggle card expansion
        function toggleCard(card) {
            card.classList.toggle('expanded');
        }

        // Show all columns
        function showAll() {
            document.querySelectorAll('.kanban-column').forEach(col => {
                col.classList.remove('column-hidden');
            });
            document.getElementById('kanban-board').className = 'grid grid-cols-7 gap-3';
            updateTabs('all');
        }

        // Show single phase (column)
        function showPhase(phase) {
            document.querySelectorAll('.kanban-column').forEach(col => {
                if (col.dataset.column === phase) {
                    col.classList.remove('column-hidden');
                } else {
                    col.classList.add('column-hidden');
                }
            });
            document.getElementById('kanban-board').className = 'grid grid-cols-1 gap-4 max-w-2xl mx-auto';
            updateTabs(phase);
        }

        // Update tab styling
        function updateTabs(activeTab) {
            document.querySelectorAll('.tab-btn').forEach(btn => {
                if (btn.dataset.tab === activeTab) {
                    btn.classList.add('tab-active');
                    btn.classList.remove('text-gray-500');
                } else {
                    btn.classList.remove('tab-active');
                    btn.classList.add('text-gray-500');
                }
            });
        }

        // Auto-update column counts
        function updateCounts() {
            const columns = ['backlog', 'ready', 'in_progress', 'review', 'qa', 'staging', 'done'];
            columns.forEach(col => {
                const colElement = document.getElementById(`col-${col}`);
                if (colElement) {
                    const count = colElement.querySelectorAll('.kanban-card').length;
                    const counter = document.getElementById(`${col}-count`);
                    const tabCounter = document.getElementById(`tab-${col}-count`);
                    if (counter) counter.textContent = count;
                    if (tabCounter) tabCounter.textContent = count;
                }
            });
        }

        // Initialize
        updateCounts();
    </script>
