{
  "_comment": "Example configuration for travissutphin.com project",
  "_version": "1.0.0",

  "project": {
    "name": "travissutphin.com",
    "description": "AI-powered portfolio and blog platform",
    "repository": "https://github.com/travissutphin/travissutphin.com",
    "production_url": "https://travissutphin.com",
    "local_url": "http://localhost:80"
  },

  "tech_stack": {
    "primary_language": "PHP 8+",
    "css_framework": "Tailwind CSS (CDN)",
    "server_type": "XAMPP",
    "deployment_platform": "Railway",
    "port": "80",
    "syntax_check_command": "php -l filename.php",
    "start_dev_server_command": "cd public && php -S localhost:8080"
  },

  "team": {
    "product_owner": "Travis",
    "tpm": "Codey",
    "principal_engineer": "Syntax",
    "designer": "Aesthetica",
    "devops": "Flow",
    "qa": "Verity",
    "security": "Sentinal",
    "marketing_seo": "Bran",
    "content_strategist": "Echo",
    "storybrand_expert": "Cipher"
  },

  "paths": {
    "docs_root": "/docs",
    "kanban_dev": "/docs/kanban/kanban_dev.html",
    "kanban_content": "/docs/kanban/kanban_content.html",
    "content_blog": "/content/blog",
    "content_case_studies": "/content/case-studies",
    "public_root": "/public",
    "assets_images": "/assets/images",
    "automation": "/automation"
  },

  "git": {
    "main_branch": "main",
    "feature_prefix": "feature/",
    "hotfix_prefix": "hotfix/",
    "release_prefix": "release/"
  },

  "content": {
    "blog_image_dimensions": "1200x630",
    "blog_image_format": "png",
    "default_author": "Travis Sutphin"
  },

  "integrations": {
    "email_service": "resend.com",
    "analytics": "Google Analytics 4",
    "schema_type": "BlogPosting"
  }
}
