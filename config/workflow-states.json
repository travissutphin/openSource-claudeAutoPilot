    },
    {
      "id": "in_progress",
      "name": "In Progress",
      "icon": "ğŸ”¨",
      "description": "Actively being worked on",
      "color": "#bfdbfe",
      "next_states": ["review", "ready"]
    },
    {
      "id": "review",
      "name": "Review",
      "icon": "ğŸ‘€",
      "description": "Code review / peer review stage",
      "color": "#c4b5fd",
      "next_states": ["qa", "in_progress"]
    },
    {
      "id": "qa",
      "name": "QA",
      "icon": "ğŸ§ª",
      "description": "Quality assurance testing",
