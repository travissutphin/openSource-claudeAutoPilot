  ],

  "automation_triggers": {
    "_comment": "Define when automation should move cards between states",
    "on_pr_created": {
      "enabled": true,
      "action": "move_to_review"
    },
    "on_pr_approved": {
      "enabled": true,
      "action": "move_to_qa"
    },
    "on_git_push_staging": {
      "enabled": true,
      "branch": "staging",
      "action": "move_to_staging"
    },
    "on_git_push_main": {
      "enabled": true,
      "branch": "main",
      "action": "move_to_done"
    }
  },

  "card_properties": {
    "task_types": [
      {"id": "feature", "name": "Feature", "color": "#dbeafe"},
      {"id": "bug", "name": "Bug", "color": "#fee2e2"},
      {"id": "hotfix", "name": "Hotfix", "color": "#fef3c7"},
      {"id": "refactor", "name": "Refactor", "color": "#e9d5ff"},
      {"id": "test", "name": "Test", "color": "#d1fae5"},
      {"id": "docs", "name": "Docs", "color": "#fed7e2"}
    ],
    "priorities": [
