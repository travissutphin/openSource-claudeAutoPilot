{
  "_comment": "Example configuration for a SaaS application project",
  "_version": "1.0.0",

  "project": {
    "name": "my-saas-app",
    "description": "B2B SaaS application with subscription billing",
    "repository": "https://github.com/company/my-saas-app",
    "production_url": "https://app.mysaas.com",
    "local_url": "http://localhost:3000"
  },

  "tech_stack": {
    "primary_language": "TypeScript/Node.js",
    "frontend": "React 18",
    "css_framework": "Tailwind CSS",
    "database": "PostgreSQL",
    "server_type": "Node.js",
    "deployment_platform": "Vercel",
    "port": "3000",
    "syntax_check_command": "npm run lint",
    "start_dev_server_command": "npm run dev",
    "test_command": "npm run test"
  },

  "team": {
    "product_owner": "ProductOwner",
    "tpm": "TPM",
    "principal_engineer": "LeadDev",
    "frontend_engineer": "FrontendDev",
    "backend_engineer": "BackendDev",
    "designer": "Designer",
    "devops": "DevOps",
    "qa": "QA",
    "security": "Security"
  },

  "paths": {
    "docs_root": "/docs",
    "kanban_dev": "/docs/kanban/kanban_dev.html",
    "src_root": "/src",
    "components": "/src/components",
    "api_routes": "/src/api",
    "public_root": "/public",
    "automation": "/scripts"
  },

  "git": {
    "main_branch": "main",
    "develop_branch": "develop",
    "feature_prefix": "feature/",
    "hotfix_prefix": "hotfix/",
    "release_prefix": "release/"
  },

  "environments": {
    "development": "http://localhost:3000",
    "staging": "https://staging.mysaas.com",
    "production": "https://app.mysaas.com"
  },

  "integrations": {
    "payment": "Stripe",
    "auth": "Auth0",
    "email": "SendGrid",
    "monitoring": "Sentry",
    "analytics": "Mixpanel"
  }
}
